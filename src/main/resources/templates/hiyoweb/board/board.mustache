            </ul>
        </nav>
        <!--검색창-->
        <div id="SearchBox">
            <!-- 검색 key : SQL 검색시 사용할 필드명 -->
                <select class="key" name="" id="searchQ">
                    <option value="b.btitle">제목</option>
                    <option value="b.bcontent">내용</option>
                    <option value="m.id">작성자</option>
                </select>

            <!-- 검색 keyword : SQL 검색시 사용할 필드의 값-->
                <input class="form-control me-2 keyword" type="search" placeholder="Search" aria-label="Search" style="width:250px">
                <button class="btn btn-outline-success" type="button" onclick="onSearch()" style="width: 150px;">검색하기</button>
        </div>

